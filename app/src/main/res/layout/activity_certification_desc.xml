<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_certification"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/title_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="147.5dp"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/certification_tv_desc_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="@string/desc_company"
            android:textColor="#1b1b1b"
            android:textSize="18sp" />

        <LinearLayout
            android:padding="8dp"
            android:layout_width="345dp"
            android:layout_height="96.5dp"
            android:layout_marginTop="9dp"
            android:background="@color/bg_add_photo">

            <EditText
                android:textColorHint="#474747"
                android:textSize="15sp"
                android:id="@+id/certification_ed_desc_comp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/input_desc_company" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="147.5dp"
        android:layout_marginTop="9dp"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/certification_tv_desc_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="@string/desc_name"
            android:textColor="#1b1b1b"
            android:textSize="18sp" />

        <LinearLayout
            android:padding="8dp"
            android:layout_width="345dp"
            android:layout_height="96.5dp"
            android:layout_marginTop="9dp"
            android:background="@color/bg_add_photo">

            <EditText
                android:textColorHint="#474747"
                android:textSize="15sp"
                android:id="@+id/certification_ed_desc_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/input_desc_name" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/certification_btn_next"
        android:layout_width="312dp"
        android:layout_height="39dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_code_orange"
        android:text="@string/next"
        android:textColor="@android:color/white"
        android:textSize="17sp" />
</LinearLayout>
