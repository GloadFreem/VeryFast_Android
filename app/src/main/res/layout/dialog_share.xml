<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_partition" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="分享到"
        android:textColor="#747474"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_qq"
            style="@style/ShareDialog_Tv"
            android:drawableTop="@mipmap/icon_qq"
            android:text="QQ" />

        <TextView
            android:id="@+id/btn_wechat"
            style="@style/ShareDialog_Tv"
            android:drawableTop="@mipmap/icon_wechat"
            android:text="微信" />

        <TextView
            android:id="@+id/btn_wechat_circle"
            style="@style/ShareDialog_Tv"
            android:drawableTop="@mipmap/icon_wechat_circle"
            android:text="朋友圈" />

        <TextView
            android:id="@+id/btn_msg"
            style="@style/ShareDialog_Tv"
            android:drawableTop="@mipmap/icon_msg"
            android:text="短信" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:src="@mipmap/icon_exit" />
</LinearLayout>
