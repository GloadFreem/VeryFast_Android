<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_certification"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/title_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="397.5dp"
        android:layout_marginTop="9dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ListView
            android:id="@+id/certification_lv_capacity"
            android:layout_width="match_parent"
            android:layout_height="363.5dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="11dp"
            android:fadeScrollbars="false"
            android:divider="@null">

        </ListView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:drawableLeft="@mipmap/i"
            android:drawablePadding="4dp"
            android:text="@string/could_multiple_choice"
            android:textColor="#1b1b1b"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/certification_btn_complete"
        android:layout_width="312dp"
        android:layout_height="39dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_code_orange"
        android:text="@string/complete"
        android:textColor="@android:color/white"
        android:textSize="17sp" />
</LinearLayout>
