<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/item_gold_inout_empty"
        android:layout_width="match_parent"
        android:layout_height="19dp" />

    <LinearLayout
        android:id="@+id/item_ll_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_gold_inout_empty"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_calendar" />

        <TextView
            android:id="@+id/item_gold_inout_yearmonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="2016年6月"
            android:textColor="@color/bg_text"
            android:textSize="17sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_gold_inout_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_ll_year"
        android:layout_marginLeft="53.5dp"
        android:background="@mipmap/line_blue_short" />

    <TextView
        android:id="@+id/item_gold_inout_endtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_gold_inout_line"
        android:layout_marginLeft="45dp"
        android:text="end"
        android:textColor="#519fd5"
        android:textSize="12sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_gold_inout_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_ll_year"
        android:layout_marginLeft="51.5dp"
        android:layout_marginTop="18dp"
        android:background="@mipmap/point_blue" />

    <RelativeLayout
        android:id="@+id/item_gold_inout_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_ll_year"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/item_gold_inout_point"
        android:background="@mipmap/icon_bill_frame"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_gold_inout_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录奖励"
            android:textColor="@color/custom_orange"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/item_gold_inout_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="+6"
            android:textColor="@color/custom_orange"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/item_gold_inout_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_gold_inout_type"
            android:layout_marginTop="8dp"
            android:text="每日登录奖励金条"
            android:textColor="#747474"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_gold_inout_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_ll_year"
        android:layout_marginRight="10dp"
        android:layout_marginTop="13dp"
        android:layout_toLeftOf="@id/item_gold_inout_card"
        android:gravity="center"
        android:text="20日"
        android:textColor="@color/bg_text"
        android:textSize="14sp" />
</RelativeLayout>