<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对发布者说点啥"
            android:textColor="#747474"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/dialog_activity_bg_edt"
            android:layout_width="match_parent"
            android:layout_height="72.5dp"
            android:layout_marginTop="13dp"
            android:background="@color/bg_main"
            android:padding="5dp">

            <EditText
                android:id="@+id/dialog_activity_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="说点什么吧"
                android:textColorHint="#747474"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">

            <Button
                android:id="@+id/dialog_activity_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="38.5dp"
                android:background="@drawable/bg_btn_dialog_cancel"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="取消"
                android:textColor="#747474"
                android:textSize="17sp" />

            <Button
                android:id="@+id/dialog_activity_btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="38.5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_tv_investor_orange"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="确定"
                android:textColor="@android:color/white"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
