<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <com.jinzht.pro.view.CircleImageView
        android:id="@+id/iv_favicon"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/iv_favicon"
        android:text=""
        android:textColor="@color/bg_text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/tv_name"
        android:text=""
        android:textColor="@color/bg_text"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_comp_name"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/iv_favicon"
        android:text=""
        android:textColor="#747474"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_tag"
        android:layout_marginRight="8dp"
        android:layout_marginTop="13dp"
        android:text=""
        android:textColor="#747474"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/item_investor_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_comp_name"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/iv_favicon"
        android:background="@mipmap/line_point" />

    <LinearLayout
        android:id="@+id/ll_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_investor_line"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_favicon"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_field1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_project_field"
            android:paddingBottom="1.5dp"
            android:paddingLeft="2.5dp"
            android:paddingRight="2.5dp"
            android:paddingTop="1.5dp"
            android:text=""
            android:textColor="#00a0d9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_field2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.5dp"
            android:background="@drawable/bg_item_project_field"
            android:paddingBottom="1.5dp"
            android:paddingLeft="2.5dp"
            android:paddingRight="2.5dp"
            android:paddingTop="1.5dp"
            android:text=""
            android:textColor="#00a0d9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_field3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.5dp"
            android:background="@drawable/bg_item_project_field"
            android:paddingBottom="1.5dp"
            android:paddingLeft="2.5dp"
            android:paddingRight="2.5dp"
            android:paddingTop="1.5dp"
            android:text=""
            android:textColor="#00a0d9"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>
