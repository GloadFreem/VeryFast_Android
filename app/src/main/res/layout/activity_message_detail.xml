<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/title_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金指投平台"
            android:textColor="@color/bg_text"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="4月22日"
            android:textColor="#747474" />

        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="3dp"
            android:text="APP更新公告"
            android:textColor="@color/bg_text"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/line_partition" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:lineSpacingExtra="3dp"
        android:padding="10dp"
        android:text="新版本v3.0 将于6月30号正式上线，这次是重大更新全新UI、全新交互、功能更加完善，满足不同身份的用户的各种需求，简直吊炸天了，各种炫酷功能和动效，让你嗨翻天，根本停不下来。
        新版本v3.0 将于6月30号正式上线，这次是重大更新全新UI、全新交互、功能更加完善，满足不同身份的用户的各种需求，简直吊炸天了，各种炫酷功能和动效，让你嗨翻天，根本停不下来。"
        android:textColor="#474747"
        android:textSize="13sp" />
</LinearLayout>
