<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_comp_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_comp_info_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:drawableLeft="@mipmap/icon_team"
                android:drawablePadding="6dp"
                android:text="公司状况"
                android:textColor="@color/bg_text"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/line_partition" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/project_rv_teams"
                android:layout_width="wrap_content"
                android:layout_height="117dp"
                android:background="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/bg_main" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_reports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/project_rv_reports"
            android:layout_width="wrap_content"
            android:layout_height="113.5dp"
            android:background="@android:color/white" />

        <ImageView
            android:id="@+id/iv_hazy"
            android:layout_width="wrap_content"
            android:layout_height="113.5dp"
            android:src="@mipmap/icon_hazy" />
    </LinearLayout>
</LinearLayout>
