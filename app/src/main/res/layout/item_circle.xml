<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="7.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jinzht.pro1.view.CircleImageView
            android:id="@+id/iv_favicon"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@mipmap/favicon_test" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/iv_favicon"
            android:text="王大锤"
            android:textColor="#474747"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_name"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/tv_name"
            android:text="北京"
            android:textColor="#474747"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_comp_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/iv_favicon"
            android:text="金指投科技 | 产品经理"
            android:textColor="#747474"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="4dp"
            android:text="40分钟前"
            android:textColor="#747474"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_favicon"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:maxLines="3"
            android:text="世界上现在除了中国文字的象形文字，其他都是拼音文字，拼音文字是语言的记录，但象形文字不是语言的记录，而是事件的记录。世界上现在除了中国文字的象形文字，其他都是拼"
            android:textColor="#474747"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="全文"
            android:textColor="@color/custom_orange"
            android:textSize="15sp"
            android:visibility="visible" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_more"
            android:layout_marginTop="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/recyclerview"
            android:layout_marginTop="7dp"
            android:background="@color/line_partition" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerview"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btn_transpond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_transpond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_transpond"
                    android:drawablePadding="9dp"
                    android:text="5625"
                    android:textColor="#747474"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:background="@color/line_partition" />

            <RelativeLayout
                android:id="@+id/btn_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_circle_comment"
                    android:drawablePadding="9dp"
                    android:text="5625"
                    android:textColor="#747474"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:background="@color/line_partition" />

            <RelativeLayout
                android:id="@+id/btn_good"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_good"
                    android:drawablePadding="9dp"
                    android:text="5625"
                    android:textColor="#747474"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
