<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <CheckBox
        android:id="@+id/item_message_cb_select"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:button="@null"
        android:drawableLeft="@drawable/selector_message_check_btn"
        android:paddingLeft="10dp"
        android:visibility="gone" />

    <com.jinzht.pro.view.CircleImageView
        android:id="@+id/item_message_img"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_message_cb_select"
        android:src="@mipmap/favicon_test"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_isread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/item_message_img"
        android:src="@mipmap/icon_red_point" />

    <TextView
        android:id="@+id/item_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_message_img"
        android:text=""
        android:textColor="@color/bg_text"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/item_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_message_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/item_message_img"
        android:text=""
        android:textColor="@color/bg_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_message_title"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/item_message_img"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="#474747"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="#747474" />
</RelativeLayout>
