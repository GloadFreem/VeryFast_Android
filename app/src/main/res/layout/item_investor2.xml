<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <com.jinzht.pro1.view.CircleImageView
        android:id="@+id/item_investorg_favicon"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/favicon_test" />

    <TextView
        android:id="@+id/item_investorg_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/item_investorg_favicon"
        android:text="红杉资本"
        android:textColor="@color/bg_text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_investorg_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_investorg_name"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/item_investorg_favicon"
        android:text="北京 | 海淀"
        android:textColor="#747474"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/item_investorg_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_investorg_addr"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/item_investorg_favicon"
        android:background="@mipmap/line_point" />

    <LinearLayout
        android:id="@+id/item_investorg_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_investorg_line"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_investorg_favicon"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_investorg_field1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_project_field"
            android:paddingBottom="1.5dp"
            android:paddingLeft="2.5dp"
            android:paddingRight="2.5dp"
            android:paddingTop="1.5dp"
            android:text="体育"
            android:textColor="#00a0d9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_investorg_field2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.5dp"
            android:background="@drawable/bg_item_project_field"
            android:paddingBottom="1.5dp"
            android:paddingLeft="2.5dp"
            android:paddingRight="2.5dp"
            android:paddingTop="1.5dp"
            android:text="旅游"
            android:textColor="#00a0d9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_investorg_field3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.5dp"
            android:background="@drawable/bg_item_project_field"
            android:paddingBottom="1.5dp"
            android:paddingLeft="2.5dp"
            android:paddingRight="2.5dp"
            android:paddingTop="1.5dp"
            android:text="电影"
            android:textColor="#00a0d9"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_investorg_btn_collect"
        android:layout_width="105dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_investorg_fields"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_btn_green"
        android:gravity="center">

        <TextView
            android:id="@+id/item_investorg_tv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_collect_investor"
            android:drawablePadding="5dp"
            android:text="关注(308)"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_investorg_btn_submit"
        android:layout_width="105dp"
        android:layout_height="28dp"
        android:layout_below="@id/item_investorg_fields"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@id/item_investorg_btn_collect"
        android:background="@drawable/bg_code_orange"
        android:gravity="center">

        <TextView
            android:id="@+id/item_investorg_tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_submit_project"
            android:drawablePadding="5dp"
            android:text="提交项目"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>
