<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#00a0e9"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13dp"
            android:drawableLeft="@mipmap/icon_time"
            android:drawablePadding="5dp"
            android:text=""
            android:textColor="#747474"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_time"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="9dp"
            android:drawableLeft="@mipmap/icon_num"
            android:drawablePadding="5dp"
            android:text=""
            android:textColor="#747474"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_time"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/item_num"
            android:background="@drawable/bg_btn_blue"
            android:padding="2dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_num"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="9dp"
            android:drawableLeft="@mipmap/icon_location"
            android:drawablePadding="5dp"
            android:text=""
            android:textColor="#747474"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_marginTop="15sp"
            android:background="@mipmap/icon_expire" />

        <TextView
            android:id="@+id/item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_num"
            android:layout_marginRight="9dp"
            android:layout_marginTop="9dp"
            android:text="1.2km"
            android:textColor="#747474"
            android:textSize="12sp"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>
