<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <com.jinzht.pro.view.CircleImageView
        android:id="@+id/item_brain_favicon"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/item_brain_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/item_brain_favicon"
        android:text=""
        android:textColor="@color/bg_text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_brain_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/item_brain_name"
        android:text=""
        android:textColor="@color/bg_text"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_brain_comp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_brain_name"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/item_brain_favicon"
        android:text=""
        android:textColor="#747474"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_brain_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="42dp"
        android:text=""
        android:textColor="#747474"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/item_brain_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_brain_comp_name"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/item_brain_favicon"
        android:background="@mipmap/line_point" />

    <TextView
        android:id="@+id/item_brain_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_brain_line"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_brain_favicon"
        android:singleLine="true"
        android:text=""
        android:textColor="#474747"
        android:textSize="13sp" />

    <RelativeLayout
        android:id="@+id/item_brain_btn_collect"
        android:layout_width="105dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_brain_desc"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_btn_green"
        android:gravity="center">

        <TextView
            android:id="@+id/item_brain_tv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_collect_investor"
            android:drawablePadding="5dp"
            android:text="关注(0)"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>
