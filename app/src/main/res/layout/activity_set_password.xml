<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageButton
            android:id="@+id/set_password_bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:background="@mipmap/button_left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/set_password"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="11dp"
        android:background="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:lineSpacingExtra="6sp"
        android:text="@string/password_limit"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/set_ed_password1"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@mipmap/iconfont_password"
            android:drawablePadding="18dp"
            android:hint="@string/input_password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="249dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="9.5dp"
            android:background="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/set_ed_password2"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@mipmap/iconfont_password"
            android:drawablePadding="18dp"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="249dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="9.5dp"
            android:background="@android:color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/set_password_confirm"
        android:layout_width="250dp"
        android:layout_height="39dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_button_transparent"
        android:text="@string/confirm"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</LinearLayout>
