<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/title_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@mipmap/bg_bankcard"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="19dp"
            android:text="未绑卡"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="11dp"
            android:src="@mipmap/icon_chip" />

        <TextView
            android:id="@+id/tv_bank_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="您暂未绑定银行卡"
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="3dp"
        android:text="温馨提示：您未绑定任何银行卡，为方便您更好的享受平台提供的投融资服务，请您尽快绑定银行卡"
        android:textColor="#9e9e9e"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/btn_bind"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/bg_code_orange"
        android:gravity="center"
        android:text="绑定银行卡"
        android:textColor="@android:color/white"
        android:textSize="25sp" />
</LinearLayout>
